:set guifont=Droid\ Sans\ Mono\ 7.5

" no menu
:set guioptions-=m
" no toolbar
:set guioptions-=T

" no left scrollbar
:set guioptions-=l
" no left scrollbar when in vertical split
:set guioptions-=L
" no right scrollbar
:set guioptions-=r
" no right scrollbar when in vertical split
:set guioptions-=R
" no bottom scrollbar
:set guioptions-=b
